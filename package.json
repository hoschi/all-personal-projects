{
  "name": "all-personal-projects",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "TURBO_CONCURRENCY=1 turbo run lint",
    "check-types": "turbo run check-types",
    "fix": "turbo run fix",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "syncpack:check": "turbo run syncpack:check --filter=@repo/tools",
    "syncpack:fix": "turbo run syncpack:fix --filter=@repo/tools",
    "test": "turbo run test",
    "ci": "turbo run ci && bun run lint",
    "ci-noc": "turbo run ci --cache=local: && TURBO_CONCURRENCY=1 turbo run lint --cache=local:",
    "init-fresh-clone": "bun run packages/tools/src/init-fresh-clone.ts"
  },
  "devDependencies": {
    "eslint": "^9.34.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.6",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prettier": {
    "semi": false
  }
}
