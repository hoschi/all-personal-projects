{
  "name": "@repo/tools",
  "version": "0.1.0",
  "private": true,
  "bin": {
    "initproject": "./src/init.ts"
  },
  "exports": {
    "./*": "./src/*.ts"
  },
  "devDependencies": {
    "@repo/eslint-config": "0.0.0",
    "@repo/typescript-config": "0.0.0",
    "@types/bun": "^1.3.6",
    "eslint": "^9.34.0"
  },
  "scripts": {
    "build": "echo 'not implemented'",
    "lint": "bunx eslint .",
    "check-types": "tsc --noEmit",
    "fix": "bunx eslint --fix .; bun run format",
    "syncpack:check": "cd ../.. && bunx syncpack list-mismatches",
    "syncpack:fix": "cd ../.. && bunx syncpack fix-mismatches",
    "format": "prettier --write . --ignore-path ../../.prettierignore",
    "format:check": "prettier --check . --ignore-path ../../.prettierignore",
    "test": "echo 'no tests'"
  }
}
