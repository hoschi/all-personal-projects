{
  "name": "@repo/db",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./*": "./src/*.ts"
  },
  "bin": {
    "copy": "./src/copy.ts",
    "copy-env": "./src/copy-env.ts"
  },
  "scripts": {
    "lint": "eslint .",
    "check-types": "tsc --noEmit",
    "migrate:dev": "dotenv -e .env.dev -- prisma migrate dev",
    "migrate:staging": "dotenv -e .env.staging -- prisma migrate deploy",
    "migrate:prod": "dotenv -e .env.production -- prisma migrate deploy"
  },
  "devDependencies": {
    "@prisma/generator-helper": "^6.17.1",
    "@prisma/internals": "^6.17.1",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/node": "^22.15.3",
    "eslint": "^9.34.0",
    "prisma": "^6.17.1",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "@prisma/client": "6.17.1",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^10.0.0"
  }
}
