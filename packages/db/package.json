{
  "name": "@repo/db",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./*": "./src/*.ts"
  },
  "bin": {
    "copy": "./src/copy.ts",
    "copy-env": "./src/copy-env.ts"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "bunx eslint .",
    "check-types": "tsc --noEmit",
    "fix": "bunx eslint --fix . && bun run format",
    "format": "prettier --write . --ignore-path ../../.prettierignore",
    "format:check": "prettier --check . --ignore-path ../../.prettierignore",
    "test": "echo 'no tests'"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.9.1",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@types/bun": "^1.3.6",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^10.0.0",
    "postgres": "^3.4.7"
  }
}
